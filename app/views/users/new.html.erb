<h1>sign up</h1>
<% if flash[:alert] %>
    <% flash[:alert].each do |msg| %>
     <p class = "flash_alert" ><%= msg %></p>
     <br>
    <% end %>
<% end %>
<%= form_for @user, url: "/signup" do |f| %>

    <% if @user && @user.errors.any? %>
        <div class="error_messages">
            <h2><%= pluralize(@user.errors.count, "error") %>
            prohibited this account from being saved:</h2>
            <ul>
                 <% @user.errors.full_messages.each do |msg| %>
                 <li><%= msg %></li>
                 <% end %>
            </ul>
        </div>
    <% end %>


    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email %>
    </div>

    <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>


  

    <div class="actions"><%= f.submit  "Signup" %></div>

   <% end %>
