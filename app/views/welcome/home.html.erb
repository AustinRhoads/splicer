<h1>Welcome to Splicer</h1>

<% if current_user == nil %>

         <%= link_to 'Log in with Google', '/auth/google_oauth2' %>
         <%= link_to 'Log in with Facebook', '/auth/facebook' %>
<div>or</div>
         <p><%= link_to 'Signup', new_identity_path %></p>
         <p><%= link_to 'Login', login_path %></p>

    <% else %>
    <p><%= link_to "#{current_user.name}", user_path(current_user) %>
    <p><%= link_to 'Logout', logout_path %></p>

<% end %>